                <div class=" col-md-9 col-lg-9 "> 
                  <table class="table table-user-information">
                    <tbody>
                      <tr>
                        <td>Email</td>
                        <td><%= @driver.email() %></td>
                      </tr>
                      <tr>
                        <td>Phone Number</td>
                        <td><%= @driver.phone_number() %></td>
                      </tr>
                      <tr>
                        <td>Make or model</td>
                        <td><%= driver.car() %></td>
                      </tr>
                   
                         <tr>
                             <tr>
                        <td>Registration Plate</td>
                        <td><%= driver.number_plate() %></td>
                      </tr>
                        <tr>
                        <td>Available Seats</td>
                        <td><%= driver.space() %></td>
                      </tr>
                      <tr>
                        <td>Your Route: From:</td>
                        <td><%= driver.route_from() %></td>
                      </tr>
                        <td>To:r</td>
                        <td><%= driver.route_to() %></td>
                           
                      </tr>
                      <tr>
                        <td><%= if @driver.passengers().any?() %></td>
                        <h2>Here are all your passengers</h2>

                        <ul>
                            <% @driver.passengers().each() do |passenger| %>
                            <li><%= passenger.name() %> </li>
                            <% end %>
                        </ul>
                        
                        <% else %>
                        <p>Do Not have passengers yet!</p>
                        <% end %>

                     
                    </tbody>
                  </table>
                  
                  <a href="#" class="btn btn-primary">My Sales Performance</a>
                  <a href="#" class="btn btn-primary">Team Sales Performance</a>
                </div>
              </div>
            </div>
                 <div class="panel-footer">
