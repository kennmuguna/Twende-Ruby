<div class="container">
  <h1>Routes in Use</h1>

  <% if @drivers.any?() %>
    <h2>Here is a list of the routes in use by our currently registered car owners:</h2>
    <h4>Routes</h4>
    <ul>
      <% @drivers.each() do |driver| %>
        <li><a href="passenger_signin/<%= driver.id()%>">From:<%= driver.route_from()%>To:<%= driver.route_to()%></a></li>
      <% end %>
    </ul>
  <% else %>
    <h2>No Routes have been added yet!</h2>
  <% end %>
</div>